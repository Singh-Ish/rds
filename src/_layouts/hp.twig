{% block scripts %}
    <script type="text/javascript">
        {# TODO remove the below IE11 polyfills when we ditch IE#}
        if(/MSIE \d|Trident.*rv:/.test(navigator.userAgent))
            document.write('<script src="https://unpkg.com/element-closest/browser"><\/script>');

        {# Load deferred CSS #}
        const def = document.createElement('link');
        def.rel = 'stylesheet';
        def.href = '{{ site.homecssPath }}';
        def.type = 'text/css';
        const godefer = document.getElementsByTagName('link')[0];
        godefer.parentNode.insertBefore(def, godefer);
    </script>
    <script src="{{ site.jsPathHome }}"></script>
    <script>
        {# ONLY LOAD SEARCH AUTOCOMPLETE IF SEARCH BUTTON CLICKED #}
        function loadScript(script_url) {
            let head = document.getElementsByTagName('head')[0];
            let script = document.createElement('script');
            script.type = 'text/javascript';
            script.src = script_url;
            head.appendChild(script);
        }
    </script>
{% endblock %}  {#END SCRIPTS #}
