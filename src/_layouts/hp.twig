<!doctype html>
<html class="no-js" lang="en">
{% block head %}
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
        <meta name="robots" content="noodp, noydir"/>
{#        <meta http-equiv="x-ua-compatible" content="ie=edge">#}
        <link rel="canonical" href="https://carleton.ca/"/>
        <link rel="stylesheet" href="https://cloud.typography.com/6307052/6118752/css/fonts.css" type="text/css"/>
        {% block critical %}
            <style>{% include "hp/_css/critical.css" %}</style>
        {% endblock %}
        {#TODO look into https://keithclark.co.uk/articles/loading-css-without-blocking-render/#}
        {#<link rel="stylesheet" href="{{ site.homecssPath }}">#}
        {#<noscript><link rel="stylesheet" href="{{ site.url }}/css/app.css"></noscript>#}
        <link rel="manifest" href="http://cu-rds.s3.amazonaws.com/hp/assets/manifest.json">
        <link rel="shortcut icon" href="http://cu-rds.s3.amazonaws.com/hp/assets/favicon.ico" type="image/x-icon"/>
        {# <link rel="apple-touch-icon-precomposed" href="http://mysite.com/images/apple-retina.png" sizes="114x114" /> #}
        {# <link rel="apple-touch-icon-precomposed" href="http://mysite.com/images/apple-ipad.png" sizes="72x72" /> #}
{#        <link rel="apple-touch-icon" href="apple-touch-icon.png">#}
        <title>Carleton University - Canada's Capital University</title>
        <meta name="description" content="Canada's Capital University, Carleton University is a dynamic research and teaching institution dedicated to achieving the highest standards of scholarship.">
        {#  If page has keywords #}
        {% if page.keywords is defined %}
            <meta name="keywords" content="{{ page.keywords }}" />
        {% endif %}
        {#  Facebook Meta Tags #}
        <meta property="og:url" content="{{ site.url }}{{ page.url }}">
        <meta property="og:type" content="website">
        <meta property="og:title" content="{{ page.title }}">
        {#  If page has a description #}
        <meta property="og:description" content="Canada's Capital University, Carleton University is a dynamic research and teaching institution dedicated to achieving the highest standards of scholarship.">
        {#  If page has an img defined #}
        {% if page.img is defined %}
            <meta property="og:image" content="{{ page.img }}">
        {% endif %}
        {# Twitter Meta Tags #}
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="{{ page.title }}">
        {#  If page has a description #}
        {% if page.desc is defined %}
            <meta name="twitter:description" content="{{ page.desc }}">
        {% endif %}
        {#  If page has an img defined #}
        {% if page.img is defined %}
            <meta name="twitter:image" content="{{ page.img }}">
        {% endif %}
    </head>
{% endblock %}

