    </div>
</div>
{% endif %}
{#---- For including blocks ----#}
{% if block %}
{% if '-' in block %}
{% set ex = block|split('-') %}
{% if code == true %}
{% filter escape %}{% include ex.0 ~ '/data/' ~ ex.0 ~ '--' ~ ex.1  %}{% endfilter %}
{% else %}
{% include ex.0 ~ '/data/' ~ ex.0 ~ '--' ~ ex.1  %}
{% endif %}
{% else %}
{% if theme %}
{% include theme ~ '/blocks/' ~ block ~ '/' ~ block %}
{% else %}
{% include block ~ '/' ~ block %}
{% endif %}
{% endif %}
{% endif %}
{#---- For including macros ----#}
{% if macro == 'listing' %}
{% from macro ~ '/' ~ macro import listing %}
    {{ listing (
        {
            color: 'white'
        },
        [
            {
                title: title1,
                url: url1,
            },
            {
                title: title2,
                url: url2
            },
            {
                title: title3,
                url: url3
            },
            {
                title: title4,
                url: url4
            },
            {
                title: title5,
                url: url5
            }
        ]
    ) }}
{% endif %}
{% if macro == 'textimg' %}
{% from macro ~ '/' ~ macro import textimg %}
    {{ textimg (
        {
            color: color,
            modifier: modifier
        },
        {
            title: title,
            img : { url: img.url, alt: img.alt},
            content: content
        }
    ) }}
{% endif %}
{% if (page.content != 'none' or open == true) and close == false and sidebar != true and code != true %}
<div class="u-block u-block--white u-block--s">
    <div class="b-content">
{% endif %}
