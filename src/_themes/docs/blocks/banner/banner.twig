{% if page.banner.img.img_url %}
<style>
    .b-banner--img {
        background-image: url({{ page.banner.img.img_url_s }});
    }
    @media (min-width: 769px) {
        .b-banner--img {
            background-image: url({{ page.banner.img.img_url }});
        }
    }
</style>
{% endif %}
<div class="u-block {% if page.banner.img.img_url %}u-block--black u-block--full{% else %}u-block--s u-block--grey{% endif %}">
<div class="b-banner{% if page.banner.img.img_url %} b-banner--img{% endif %}{% if page.banner.img.img_opacity == "dark" %} b-banner--img-dark{% elseif page.banner.img.img_opacity == "light" %} b-banner--img-light{% endif %}{% if page.banner.img.img_position == "top" %} b-banner--img-top{% elseif data.img.img_position == "bottom" %} b-banner--img-bottom{% endif %}">
    <div class="banner__container">
{#{% if page.banner.breadcrumbs.parent %}#}
        <nav aria-label="breadcrumb">
            <ol class="banner__breadcrumbs" itemscope itemtype="http://schema.org/BreadcrumbList">
                {% if page.subsite %}
                <li class="banner__breadcrumb-item" itemprop="breadcrumb"><a href="{{ site.url }}">Home</a></li>
                {% endif %}
                {% if (page.subsite == 'dev') and ('Subsite' not in page.title) %}
                <li class="banner__breadcrumb-item" itemprop="breadcrumb"><a href="{{ site.url }}/dev/">Dev</a></li>
                {% endif %}
                {% if page.section %}<li class="banner__breadcrumb-item" itemprop="breadcrumb"><a href="../../">{{ page.section }}</a></li>{%  endif %}
                {% if page.subsection %}<li class="banner__breadcrumb-item" itemprop="breadcrumb"><a href="../">{{ page.subsection }}</a></li>{%  endif %}
                <li class="banner__breadcrumb-item active u-visually-hidden" itemprop="breadcrumb" aria-current="page">{{ data.title }}</li>
            </ol>
        </nav>
{#{%  endif %}#}
        <h1 class="banner__title{% if data.img.img_url %} u-ani-fadein{% endif %}">{{ page.title }} {{ page.meh }}</h1>
{% if page.banner.button %}
        <p class="banner__buttons">
{% for item in page.banner.button %}
            <a class="c-buttoncta" href="{{ item.url }}" role="button">{{ item.title }}</a>
{% endfor %}
        </p>
{% endif %}
    </div>
</div>
</div>
